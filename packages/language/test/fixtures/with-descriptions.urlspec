// Sort order for job listings
// Used to determine how jobs are displayed
param sortOrder = "recent" | "popular" | "trending";

global {
  // Referrer source
  // Indicates where the user came from
  referrer?: "jobs" | "hello";

  // UTM source parameter
  utm_source?: string;
}

// Job listings page
// Displays a list of all available jobs
page list = /jobs {
  // Job category filter
  category?: string;

  // Sort order
  sort: sortOrder;
}

// Job detail page
// Shows detailed information about a specific job
page detail = /jobs/:job_id {
  // Unique job identifier
  job_id: string;

  // Preview mode flag
  preview?: "true" | "false";
}
