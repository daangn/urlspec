{
  "name": "urlspec",
  "scopeName": "source.urlspec",
  "fileTypes": [".urlspec"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.urlspec",
      "match": "\\b(global|page|param|string)\\b"
    },
    {
      "name": "string.quoted.double.urlspec",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.urlspec"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.urlspec"
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.urlspec",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
